<h1>Clientes</h1>

<table>
	<tr>
		<th>Nome</th>
		<th>Idade</th>
	</tr>

	<% @clientes.each do |cliente| %>
	<tr>
		<td><%= cliente.nome %></td>
		<td><%= cliente.idade %></td>
		<td><%= link_to "Mostrar", cliente_path( cliente )%></td>
		<td><%= link_to "Editar", edit_cliente_path( cliente )%></td>
		<td><%= link_to "Deletar", cliente_path( cliente), :method => :delete, :confirm => "certeza?"  %></td>
	
	</tr>
	<% end %>
</table>

